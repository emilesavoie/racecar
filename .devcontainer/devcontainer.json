{
    "name": "racecar devcontainer",
    "remoteUser": "racecar",
    "build": {
        "dockerfile": "Dockerfile.dev",
        "args": {
            "USERNAME": "racecar",
            "USER_UID": "1001", // change it to your user UID if need to preserve file permission
            "DISPLAY": "unix:0"
        },
        "progress": "plain"
    },
    "workspaceFolder": "/home/racecar/ros2_ws",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/racecar/ros2_ws/src,type=bind",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    "containerEnv": {
        "ROS_DOMAIN_ID": "1",
        "DISPLAY": "unix:0"
    },
    "runArgs": [
        "--net=host",
        "--pid=host",
        "--ipc=host",
        "-e",
        "DISPLAY=${env:DISPLAY}",
        "-i"
        //,"--gpus","all" // uncomment to share GPU
    ],
    "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached"
    ],
    "postCreateCommand": "sudo apt update && rosdep update && rosdep install --from-paths src --ignore-src -y && colcon build --symlink-install"
}